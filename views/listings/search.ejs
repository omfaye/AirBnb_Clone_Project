<!-- search.ejs with Bootstrap grid using a for...of loop -->

<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
    <h3 class="text-center mb-4">Search Results for '<%= searchQuery %>'</h3>

    <div class="row">
        <% if (listings.length > 0) { %>
            <% for (let listing of listings) { %>
                <div class="col-md-4 mb-4">
                    <a href="/listings/<%= listing._id %>" class="listing-link">
                        <div class="card">
                            <!-- Card content here -->
                            <div class="card col listing-card">
                                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_img" style="height: 20rem;">
                                <div class="card-img-overlay"></div>
                                <div class="card-body">
                                    <p class="card-text">
                                        <b><%= listing.title %> </b><br>
                                        &#8377;<%= listing.price %> /night
                                        <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            <% } %>
        <% } else { %>
            <div class="col-12 text-center">
                <p>No listings found for '<%= searchQuery %>'</p>
            </div>
        <% } %>
    </div>
</div>
